#!/usr/bin/env node
var jetpack = require('fs-jetpack');
var _       = require('lodash');
var Project = require( __dirname + '/../lib/project');

var args    = _.slice( process.argv, 2 );
var cwd     = process.cwd();
var command = args[0];
var options = _.slice( args, 1 );


/*******************
 * Run the Command *
 *******************/


var project = new Project( command, options );
project.runCommand().then( handleSuccess ).catch( handleError );

function handleSuccess( message ) {
	console.log( 'Woohoo!', message );
}

function handleError( error ) {
	console.log( 'Oops!', error.message );
}
